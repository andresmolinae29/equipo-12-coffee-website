<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>Mercadito de café - Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/5cc45362ff.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@100;300&family=Roboto:wght@100;300;400&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/css/registerStyle.css">
    <script src="/js/registerUser.js"></script>
</head>

<body>
    <%- include("./partials/header") %>

        <div class="cont-form">
            <h3>Registrarse</h3>
            <% if (locals.message && message) { %>
                <span class="text-danger">
                    <%= message %>
                </span>
                <% } %>
            <form action="/user/register" method="POST" enctype="multipart/form-data">
                <div>
                    <label for="fullName" class="label-input"></label>
                    <input 
                        id="fullName" 
                        type="text" 
                        class="field <%= locals.errors && errors.fullName ? 'is-invalid' : null %>"   
                        name="fullName"
                        placeholder="Nombre y apellido"
                        <% if (locals.oldData && oldData.fullName) { %>
                            value = "<%= oldData.fullName %>"
                        <% } %>>
                        <% if (locals.errors && errors.fullName) { %>
                        <span class="text-danger">
                            <%= errors.fullName.msg %>
                        </span>
                        <% } %>
                        <div class="text-danger" id="nameError"></div>
                </div>
                <div>
                    <label for="userName" class="label-input"></label>
                    <input 
                        id="userName" 
                        type="text" 
                        class="field" 
                        placeholder="Usuario" 
                        name="userName"
                        <% if (locals.oldData && oldData.userName) { %>
                            value = <%= oldData.userName %> 
                        <% } %>>
                        <% if (locals.errors && errors.userName) { %>
                        <span class="text-danger">
                            <%= errors.userName.msg %>
                        </span>
                        <% } %>
                        <div class="text-danger" id="userNameError"></div>
                </div>
                <div>
                    <label for="password" class="label-input"></label>
                    <input 
                        id="password" 
                        type="password" 
                        class="field" 
                        placeholder="Contraseña" 
                        name="password">
                        <% if (locals.errors && errors.password) { %>
                            <span class="text-danger">
                                <%= errors.password.msg %>
                            </span>
                            <% } %>
                            <div class="text-danger" id="passwordError"></div>
                </div>
                <div>
                    <label for="passwordConfirmation" class="label-input"></label>
                    <input 
                        id="passwordConfirmation" 
                        type="password" 
                        class="field" 
                        placeholder="Confirmar contraseña"
                        name="passwordConfirmation">
                        <% if (locals.errors && errors.passwordConfirmation) { %>
                            <span class="text-danger">
                                <%= errors.passwordConfirmation.msg %>
                            </span>
                            <% } %>
                            <div class="text-danger" id="passwordConfirmationError"></div>
                </div>
                <div>
                    <label for="email" class="label-input"></label>
                    <input 
                        id="email" 
                        type="email" 
                        class="field" 
                        placeholder="Email" 
                        name="email"
                        <% if (locals.oldData && oldData.email) { %>
                            value = <%= oldData.email %> 
                        <% } %>>
                        <% if (locals.errors && errors.email) { %>
                        <span class="text-danger">
                            <%= errors.email.msg %>
                        </span>
                        <% } %>
                        <div class="text-danger" id="emailError"></div>

                </div>
                <div class="input-select">
                    <div class="imgUpload">
                        <label id="avatar" for="avatar" class="avatar-text">Avatar de usuario</label>
                        <br><input type="file" for="avatar" id="avatar" name="avatar" class="form-input">
                    </div>
                </div>
                <div>
                    <button class="btn-save" type="submit" value="Registrarse">Registrarse</button>
                </div>
                <h4 id="alert">
                    <div class="alertOK"></div>

                </h4>
            </form>
        </div>

        <%- include("./partials/footer") %>
</body>

</html>